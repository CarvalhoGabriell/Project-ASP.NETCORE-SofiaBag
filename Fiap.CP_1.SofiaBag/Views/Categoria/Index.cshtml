@model Categoria

@{
    ViewData["Title"] = "Categoria Page";
}

<sucess-msg mensagem="@TempData["msg"]"></sucess-msg>


<div class="row">

    <div class="col">
        <h2>Cadastro Categorias</h2>

        <form asp-action="cadastrar">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="DtCadastro"></label>
                <input asp-for="DtCadastro" class="form-control" type="date"/>
            </div>

            <div class="form-group">
                <label asp-for="Descricao"></label>
                <textarea asp-for="Descricao" class="form-text" 
                          placeholder="Informe uma descrição" 
                          wrap="soft"
                          cols="80"
                          rows="5"
                          >
                    
                </textarea>
            </div>
            <input type="submit" class="form-control" value="Cadastrar"/>
        </form>
    </div>


    <div class="col">
        <h2>Listagem</h2>

        <table class="table table-hover table-danger">
            <tr>
                <th>Nome</th>
                <th>Data Cadastro</th>
                <th>Descrição</th>

            </tr>

            @foreach(var itens in ViewBag.categorias)
            {
                <tr>
                    <td>@itens.Nome</td>
                    <td>@itens.DtCadastro</td>
                    <td>@itens.Descricao</td>
                </tr>
            }

        </table>
    </div>

</div>