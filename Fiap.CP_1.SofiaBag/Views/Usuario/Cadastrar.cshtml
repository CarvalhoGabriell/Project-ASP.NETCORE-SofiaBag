@model Usuario

@{
    ViewData["Title"] = "Cadastro do Usuario";
}


<button type="button" style="margin-bottom:1rem" class="btn btn-primary btn-lg btn-block">Cadastro de Usuários</button>

<sucess-msg mensagem="@TempData["msg"]"></sucess-msg>

<form asp-action="cadastrar">

    <div class="form-group">
        <input asp-for="UsuarioId"/>
    </div>

    <div class="form-group">
        <label asp-for="NomeCompleto"></label>
        <input asp-for="NomeCompleto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NomeMochila"></label>
        <input asp-for="NomeMochila" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DtNascimento"></label>
        <input asp-for="DtNascimento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sexo"></label>
        <select asp-for="Sexo" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
            <option>Selecione</option>
        </select>

    </div>

    <div style="margin-top:15px; padding:15px; margin-left:410px">

        <input type="submit" class="btn btn-lg btn-success" value="Cadastrar" />
        <a class="btn btn-lg btn-danger" asp-action="index">Cancelar</a>
    </div>
</form>
