@model Usuario

@{
    ViewData["Title"] = "Cadastro do Usuario";
}

<h1>Cadastrar Usuario</h1>
<form asp-action="cadastrar">
    <div class="form-group">
        <label asp-for="NomeCompleto"></label>
        <input asp-for="NomeCompleto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NomeMochila"></label>
        <input asp-for="NomeMochila" />
    </div>

    <div class="form-group">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" />
    </div>
    <div class="form-group">
        <label asp-for="DtNascimento"></label>
        <input asp-for="DtNascimento" />
    </div>
    <div class="form-group">
        <label asp-for="Sexo"></label>
        <select asp-for="Sexo" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
            <option>Selecione</option>
        </select>

    </div>

    <div style="margin-top:15px; padding:15px; margin-left:410px">

        <input type="submit" class="btn btn-lg btn-success" value="Cadastrar" />

    </div>
</form>
