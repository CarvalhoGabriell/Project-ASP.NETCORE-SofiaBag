@model Objetos



<div class="row g-3">
    <div class="col-sm-7">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Nome do Objeto" aria-label="Nome" />
    </div>
    <div class="col-sm">
        <label asp-for="DtCadastro"></label>
        <input asp-for="DtCadastro" class="form-control" placeholder="Data do Cadastro" aria-label="Data" />
    </div>
    <div class="col-sm" style="margin-top:auto">
        <label asp-for="Ativo">Objeto Disponível </label>
        <input asp-for="Ativo" aria-label="Ativo" />
    </div>
</div>

<div class="form-group">
    <label asp-for="Descricao"></label>
    <textarea placeholder="Deixe uma breve Descrição" asp-for="Descricao" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="Tipo"></label>
    <select class="form-control" asp-for="Tipo" asp-items="@Html.GetEnumSelectList<Categoria>()">
        <option>Selecione uma Categoria</option>
    </select>

</div>

<div class="form-group">
    <label asp-for="Cor"></label>
    <select asp-for="Cor" class="form-control" asp-items="@ViewBag.cores">
        <option>Selecione uma Cor</option>
    </select>
</div>
<hr />

<fieldset>
    <button type="button" style="margin-bottom:1rem" class="btn btn-success btn-lg btn-block">Criar Lembrete</button>

    <div class="form-group">
        <label asp-for="Lembrete.Nome"></label>
        <input asp-for="Lembrete.Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Lembrete.DtLembrete"></label>
        <input asp-for="Lembrete.DtLembrete" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status Lembrete</label>
        <hr />
        <label for="verdadeiro">Ativo</label>
        <input asp-for="Lembrete.Status" type="radio" id="verdadeiro" value="true" />


        <label for="falso">Inativo</label>
        <input asp-for="Lembrete.Status" type="radio" id="falso" value="false" />
    </div>
</fieldset>

